<odoo>
    <!-- Formulario del modelo -->
    <record id="view_import_account_move_txt_form" model="ir.ui.view">
        <field name="name">import.account.move.txt.form</field>
        <field name="model">import.account.move.txt</field>
        <field name="arch" type="xml">
            <form string="Importar Póliza de Nómina">
                <sheet>
                    <group>
                        <field name="file_data" widget="binary" filename="file_name"/>
                        <field name="file_name"/>
                        <field name="journal_id"/>
                    </group>
                    <footer>
                        <button string="Importar" type="object" name="import_txt" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción asociada al formulario -->
    <record id="action_import_account_move_txt" model="ir.actions.act_window">
        <field name="name">Importar Póliza de Nómina</field>
        <field name="res_model">import.account.move.txt</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_account_move_txt_form"/>
    </record>

    <!-- Menú principal y submenú -->
    <menuitem id="menu_account_move_txt_root" name="Pólizas" parent="account.menu_accounting" sequence="20"/>
    <menuitem id="menu_account_move_txt" name="Importar Póliza de Nómina" parent="menu_account_move_txt_root" action="action_import_account_move_txt" sequence="30"/>
</odoo>



