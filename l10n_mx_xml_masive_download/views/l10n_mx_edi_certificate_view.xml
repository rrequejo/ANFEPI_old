<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="certificate_form_view" model="ir.ui.view">
            <field name="name">certificate.form</field>
            <field name="model">l10n_mx_edi.certificate</field>
            <field name="inherit_id" ref="l10n_mx_edi.certificate_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='content']" position="attributes">
                    <attribute name="filename">content_name</attribute>
                </xpath>
                <xpath expr="//field[@name='key']" position="attributes">
                    <attribute name="filename">key_name</attribute>
                </xpath>
                <xpath expr="//field[@name='serial_number']" position="after">
                    <field name="content_name" invisible="1"/>
                    <field name="key_name" invisible="1"/>
                    <field name="l10n_mx_fiel" invisible="1"/>
                </xpath>    
            </field>
        </record>
    </data>
</openerp>
