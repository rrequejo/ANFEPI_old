<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_add_fields" model="ir.ui.view">
        <field name="name">account.move.add.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                <field name="l10n_mx_edi_payment_policy" string="Politica de Pago" readonly="1"/>
                <field name="l10n_mx_edi_usage" string="Uso" />
                <field name="l10n_mx_edi_payment_method_id" string="Metodo de Pago"/>
                <field name="l10n_mx_edi_cfdi_uuid" string="CFDI UUID" />
            </xpath>
        </field>
    </record>

</odoo>
