<odoo>
    <record id="view_wizard_import_policies" model="ir.ui.view">
        <field name="name">import.policies.wizard.form</field>
        <field name="model">account.move.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Pólizas">
                <group>
                    <field name="file" filename="filename"/>
                </group>
                <footer>
                    <button string="Importar" type="object" name="import_policies" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_import_policies" name="Importar Pólizas" parent="account.menu_finance" action="action_import_policies_wizard"/>
</odoo>
